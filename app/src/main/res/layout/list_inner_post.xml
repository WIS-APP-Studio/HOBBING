<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/list_inner_post_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                tools:srcCompat="@drawable/profile_image" />

            <TextView
                android:id="@+id/list_inner_post_writer"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="6pt"
                android:padding="5dp"
                android:gravity="center"
                android:text="개인 프로필"
                android:textStyle="bold" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="5pt"
                android:text="\@카테고리 \n#해시태그 \n#해시태그"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/list_inner_post_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:text="이너 프로필 주인의 게시물 제목입니다."
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:textSize="6pt"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/image"/>

            <TextView
                android:id="@+id/list_inner_post_tv_description"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:textSize="10dp"
                android:text="이너 프로필 주신의 게시물의 내용입니다."
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_like"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textSize="6pt"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/like"/>

                <TextView
                    android:id="@+id/list_inner_post_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:text="100"/>

                <ImageView
                    android:id="@+id/imageView_shared"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textSize="6pt"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/download"/>

                <TextView
                    android:id="@+id/list_inner_post_shares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:text="1"/>

                <ImageView
                    android:id="@+id/imageView_view"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textSize="6pt"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="right"
                    android:src="@drawable/view"/>

                <TextView
                    android:id="@+id/list_inner_post_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>