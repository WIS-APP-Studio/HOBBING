<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signature">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="191dp"
        android:layout_height="28dp"
        android:text="아이디/비밀번호 변경"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="520dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="86dp"
        android:layout_height="28dp"
        android:text="회원가입"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="520dp" />

    <TextView
        android:id="@+id/sign_in_title"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="로그인"
        android:textSize="40dp"
        tools:layout_editor_absoluteY="132dp"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="391dp"
        android:layout_height="41dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/sub_gray"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="260dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="아이디 : "
            android:textSize="25dp" />

        <EditText
            android:id="@+id/sign_in_et_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/white"
            android:textColor="#143D59" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="392dp"
        android:layout_height="41dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/sub_gray"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="325dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="비밀번호 : "
            android:textSize="25dp" />

        <EditText
            android:id="@+id/sign_in_et_pw"
            android:layout_width="271dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/white"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/sign_in_btn"
        android:layout_width="241dp"
        android:layout_height="65dp"
        android:text="Log in !"
        android:textSize="28dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="597dp"
        android:backgroundTint="@color/purple_200"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:background="@color/sub_brown"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="508dp"></LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/check"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="446dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="127dp"
        android:layout_height="43dp"
        android:text="자동 로그인"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="454dp" />

</androidx.constraintlayout.widget.ConstraintLayout>